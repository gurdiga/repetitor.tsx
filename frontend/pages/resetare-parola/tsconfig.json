{
  "extends": "../../tsconfig-base.json",
  "files": ["src/Main.tsx"],
  "include": [
    "src",
    "../../shared/src" /* shared between pages */,
    "../../../shared/src" /* shared between frontend and backend */
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "shared/*": ["../../../shared/src/*"],
      "frontend/shared/*": ["../../shared/src/*"]
    },
    "outFile": "build/bundle.js"
  }
}
