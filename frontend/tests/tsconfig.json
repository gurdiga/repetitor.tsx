{
  "extends": "../tsconfig-base.json",
  "references": [{"path": "../../shared"}, {"path": "../shared"}],
  "include": [
    "src",
    "../shared/src",
    "../pages/home/src",
    "../pages/autentificare-repetitor/src",
    "../pages/inregistrare-repetitor/src",
    "../pages/recuperare-parola/src"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*",
        "../pages/autentificare-repetitor/src/*",
        "../pages/inregistrare-repetitor/src/*",
        "../pages/recuperare-parola/src/*",
        "../pages/home/src/*"
