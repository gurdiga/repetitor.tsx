{
  "name": "repetitor.tsx",
  "author": "Vlad GURDIGA <gurdiga@gmail.com>",
  "description": "This is going to be an online system for tutors.",
  "license": "MIT",
  "engines": {
    "node": "13.1.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "functions": false,
          "variables": false
        }
      ],
      "@typescript-eslint/no-namespace": "off",
      "no-inner-declarations": "off",
      "prefer-const": [
        "error",
        {
          "destructuring": "all",
          "ignoreReadBeforeAssign": false
        }
      ]
    },
    "ignorePatterns": [
      "backend/migrations/"
    ]
  },
  "scripts": {
    "migrate": "db-migrate up --verbose --env $NODE_ENV --config backend/migrations/config.json --migrations-dir backend/migrations",
    "heroku-prebuild": "(cd backend && npm install) && (cd frontend && npm install) && npm run-script migrate",
    "build": "tsc --build -v",
    "start": "node --require ts-node/register --require tsconfig-paths/register backend/src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gurdiga/repetitor.tsx.git"
  },
  "cacheDirectories": [
    "backend/node_modules",
    "frontend/node_modules"
  ],
  "dependencies": {
    "@types/chai": "^4.2.8",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^7.0.1",
    "@types/sinon": "^7.5.1",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "db-migrate": "0.11.6",
    "db-migrate-mysql": "2.1.0",
    "eslint": "^6.8.0",
    "mocha": "^7.0.1",
    "nodemon": "^2.0.2",
    "sinon": "^8.1.0",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.5"
  }
}
